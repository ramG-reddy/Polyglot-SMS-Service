# Docker Compose Environment Variables
# Copy this file to .env and customize as needed
# All services use these same variables for consistency between local and Docker environments

# ==========================================
# Infrastructure Services
# ==========================================

# Zookeeper Configuration
ZOOKEEPER_PORT=2181

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_ADVERTISED_HOST=kafka
KAFKA_PORT=9092
KAFKA_EXTERNAL_PORT=29092

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=sms_store
MONGO_APP_USER=smsapp
MONGO_APP_PASSWORD=smsapp123

# ==========================================
# Application Services
# ==========================================

# Kafka Topic Configuration (shared by both services)
KAFKA_TOPIC=sms.events
KAFKA_GROUP_ID=sms-store-consumer-group

# Java SMS Sender Service
JAVA_SERVICE_PORT=8080
SPRING_PROFILES_ACTIVE=docker

# Go SMS Store Service
GO_SERVICE_PORT=8090
